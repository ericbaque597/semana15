import tkinter as tk
from tkinter import messagebox

class TareaApp:
    def __init__(self, root):
        self.root = root
        self.root.title("Gestor de Tareas")

        # Lista de tareas
        self.tareas = []

        # Crear componentes de la GUI
        self.entry_tarea = tk.Entry(root, width=40)
        self.entry_tarea.grid(row=0, column=0, padx=10, pady=10)

        self.boton_agregar = tk.Button(root, text="Añadir Tarea", command=self.agregar_tarea)
        self.boton_agregar.grid(row=0, column=1, padx=10, pady=10)

        self.lista_tareas = tk.Listbox(root, width=50, height=10, selectmode=tk.SINGLE)
        self.lista_tareas.grid(row=1, column=0, columnspan=2, padx=10, pady=10)

        self.boton_completar = tk.Button(root, text="Marcar como Completada", command=self.marcar_completada)
        self.boton_completar.grid(row=2, column=0, padx=10, pady=10)

        self.boton_eliminar = tk.Button(root, text="Eliminar Tarea", command=self.eliminar_tarea)
        self.boton_eliminar.grid(row=2, column=1, padx=10, pady=10)

        # Bind para agregar tarea con Enter
        self.entry_tarea.bind("<Return>", self.agregar_tarea_con_teclado)

    def agregar_tarea(self):
        tarea = self.entry_tarea.get()
        if tarea:
            self.tareas.append(tarea)
            self.lista_tareas.insert(tk.END, tarea)
            self.entry_tarea.delete(0, tk.END)
        else:
            messagebox.showwarning("Entrada Vacía", "Por favor, escribe una tarea.")

    def agregar_tarea_con_teclado(self, event=None):
        self.agregar_tarea()

    def marcar_completada(self):
        try:
            indice = self.lista_tareas.curselection()[0]
            tarea = self.lista_tareas.get(indice)
            tarea_completada = f"{tarea} - Completada"
            self.lista_tareas.delete(indice)
            self.lista_tareas.insert(indice, tarea_completada)
        except IndexError:
            messagebox.showwarning("Selección Errónea", "Por favor, selecciona una tarea.")

    def eliminar_tarea(self):
        try:
            indice = self.lista_tareas.curselection()[0]
            self.lista_tareas.delete(indice)
            self.tareas.pop(indice)
        except IndexError:
            messagebox.showwarning("Selección Errónea", "Por favor, selecciona una tarea.")

if __name__ == "__main__":
    root = tk.Tk()
    app = TareaApp(root)
    root.mainloop()
